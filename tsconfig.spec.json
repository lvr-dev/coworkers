{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "outDir": "./out-tsc/spec",
    "module": "commonjs",
    "types": [
      "jest",
      "node",
      "jquery",
      "jsdom"
    ],
    "emitDecoratorMetadata": true
  },
  "esModuleInterop": true,
  "files": [
    "src/test.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}
